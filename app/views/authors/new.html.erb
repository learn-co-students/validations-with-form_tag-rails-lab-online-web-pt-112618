<h2>Create an Author</h2>
<%= form_tag authors_path method do %>
  <% if @author.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @author.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
  </div>
  <% end %>

    <% if @author.errors[:name].empty? %>
      <div class="field">
    <% else %>
      <div class="field_with_errors">
    <% end %>
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name" %>
  </div>

  <% if @author.errors[:email].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= label_tag "name", "Email" %>
    <%= text_field_tag "email" %>
  </div>

  <% if @author.errors[:phone_number].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
  <%= label_tag "name", "Phone Number" %>
  <%= text_field_tag "phone number" %>
</div>

  <%= submit_tag "Create Author" %>
<% end %>
